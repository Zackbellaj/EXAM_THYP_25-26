@prefix : <http://example.org/ns/university#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix dcterms: <http://purl.org/dc/terms/> .

# -------------------------------------------------------------------
# MÉTADONNÉES DE L'ONTOLOGIE
# -------------------------------------------------------------------

<http://example.org/ns/university> a rdf:Ontology ;
    dcterms:title "Vocabulaire d'Évaluation Master"@fr ;
    dcterms:description "Ontologie pour gérer les cours, étudiants et notes d'un Master."@fr ;
    dcterms:created "2023-10-27"^^xsd:date .

# -------------------------------------------------------------------
# 2. DÉFINITION DES CLASSES
# -------------------------------------------------------------------

# Classe Étudiant (Sous-classe de Personne dans FOAF)
:Student a rdfs:Class ;
    rdfs:subClassOf foaf:Person ;
    rdfs:label "Étudiant"@fr ;
    rdfs:comment "Une personne inscrite dans le programme de Master."@fr .

# Classe Cours (Matière)
:Course a rdfs:Class ;
    rdfs:label "Cours"@fr ;
    rdfs:comment "Une unité d'enseignement du Master (ex: Web Sémantique)."@fr .

# Classe Évaluation (L'épreuve elle-même : Examen, Projet, TP)
:Evaluation a rdfs:Class ;
    rdfs:label "Évaluation"@fr ;
    rdfs:comment "Une épreuve spécifique liée à un cours (Ex: Partiel, Projet Final)."@fr .

# Classe Note (L'objet qui lie l'étudiant à l'évaluation avec un résultat)
:Grade a rdfs:Class ;
    rdfs:label "Note"@fr ;
    rdfs:comment "Le résultat obtenu par un étudiant à une évaluation spécifique."@fr .

# -------------------------------------------------------------------
# 3. DÉFINITION DES PROPRIÉTÉS
# -------------------------------------------------------------------

# --- Propriétés liées au Cours ---

:hasCode a rdf:Property ;
    rdfs:domain :Course ;
    rdfs:range xsd:string ;
    rdfs:label "Code du cours"@fr .

:hasEvaluation a rdf:Property ;
    rdfs:domain :Course ;
    rdfs:range :Evaluation ;
    rdfs:label "Comprend l'évaluation"@fr .

# --- Propriétés liées à l'Évaluation ---

:weight a rdf:Property ;
    rdfs:domain :Evaluation ;
    rdfs:range xsd:decimal ;
    rdfs:label "Coefficient"@fr ;
    rdfs:comment "Le poids de l'évaluation dans la moyenne (ex: 0.5)."@fr .

:maxScore a rdf:Property ;
    rdfs:domain :Evaluation ;
    rdfs:range xsd:integer ;
    rdfs:label "Note maximale"@fr ;
    rdfs:comment "Le barème (ex: noté sur 20)."@fr .

# --- Propriétés liées à la Note (Grade) ---

:obtainedBy a rdf:Property ;
    rdfs:domain :Grade ;
    rdfs:range :Student ;
    rdfs:label "Obtenue par"@fr .

:forEvaluation a rdf:Property ;
    rdfs:domain :Grade ;
    rdfs:range :Evaluation ;
    rdfs:label "Pour l'évaluation"@fr .

:scoreValue a rdf:Property ;
    rdfs:domain :Grade ;
    rdfs:range xsd:decimal ;
    rdfs:label "Valeur de la note"@fr .

:feedback a rdf:Property ;
    rdfs:domain :Grade ;
    rdfs:range xsd:string ;
    rdfs:label "Appréciation"@fr .

# --- Propriétés liées à l'Étudiant ---

:studentID a rdf:Property ;
    rdfs:domain :Student ;
    rdfs:range xsd:string ;
    rdfs:label "Numéro étudiant"@fr .
